---
type StarRatingProps = {
  stars: number; // Declaramos que 'stars' es un número
};

const StarRating: React.FC<StarRatingProps> = ({ stars }) => {
  return (
    <div className="star-rating">
      {/* Mostrar las estrellas llenas */}
      {Array.from({ length: stars }, (_, index) => (
        <svg
          key={`filled-${index}`}
          width="24"
          height="24"
          fill="#FFD700" // Color dorado para las estrellas llenas
        >
          <path d="M12 .587l3.668 7.57L24 9.234l-6 5.847 1.42 8.319L12 18.902l-7.42 4.498L6 15.081.005 9.234l7.337-1.077z" />
        </svg>
      ))}

      {/* Mostrar las estrellas vacías (máximo 5 en total) */}
      {Array.from({ length: 5 - stars }, (_, index) => (
        <svg
          key={`empty-${index}`}
          width="24"
          height="24"
          fill="none"
          stroke="#000" // Estilo de las estrellas vacías
        >
          <path
            d="M12 .587l3.668 7.57L24 9.234l-6 5.847 1.42 8.319L12 18.902l-7.42 4.498L6 15.081.005 9.234l7.337-1.077z"
            strokeWidth="2"
          />
        </svg>
      ))}
    </div>
  );
};

export default StarRating;
