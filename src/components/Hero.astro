---
const personalImageAlt = "Sebastián Salgado Polanco";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import GitHubIcon from "@/components/icons/GitHub.astro";
import InstagramIcon from "@/components/icons/InstagramIcon.astro";
import SocialPill from "@/components/SocialPill.astro";
---

<div class="">
  <!--max-w-xl/-->
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white mb-8 text-center mt-0"
  >
    Portfolio
  </h1>
  <div class="flex gap-4 mb-4 items-center justify-start">
    <!--flex gap-4 mb-4 items-center justify-start/-->
    <!-- Cambio para ajustar alineación -->
    <div class="text-content">
      <!-- Envoltorio para el texto -->
      <!--flex items-center transition md:justify-center md:hover:scale-105/-->
      <a
        href="https://www.linkedin.com/in/sebastián-salgado-polanco-79137b296/"
        target="_blank"
        rel="noopener"
        class="flex items-center transition md:hover:scale-105 mb-8"
        aria-label="Perfil de LinkedIn"
      >
        <!-- <Badge>Disponible para trabajar</Badge>-->
      </a>
      <h2
        class="text-xl font-bold tracking-tight text-gray-800 sm:text-3xl dark:text-white mb-8"
      >
        Hola! Me llamo Sebastián Salgado &#128075
      </h2>
      <p
        class="text-xl text-gray-900 dark:[&>strong]:text-pink-200 [&>strong]:text-blue-500 [&>strong]:font-semibold dark:text-gray-300"
      >
        Estudiante de Ingenieria Civil en Informatica en la Universida Técnica
        Federico Santa María. Me gusta mucho todo lo relacionado a la
        computacion, pero tengo una fuerta atraccion hacia el Desarrollo
        Backend, Inteligencia Artificial y Ciberseguridad.
        <strong>Actualmente disponible para trabajar!</strong>
      </p>
    </div>
    <!-- Añadido margen automático a la izquierda -->
    <img
      class="rounded-full ml-auto"
      style="width: 400px; height: 300px;"
      src="/profile.jpeg"
      alt={personalImageAlt}
    />
  </div>
  <nav class="flex flex-wrap gap-4 mt-8 mb-50">
    <SocialPill href="mailto:miduga@gmail.com">
      <MailIcon class="size-5" />
      Contáctame
    </SocialPill>
    <SocialPill
      href="https://www.linkedin.com/in/sebastián-salgado-polanco-79137b296/"
    >
      <LinkedInIcon class="size-5" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/Kodamonkey">
      <GitHubIcon class="size-5" />
      GitHub
    </SocialPill>

    <SocialPill href="https://www.instagram.com/seba_salgadouuu/">
      <InstagramIcon class="size-5" />
      Instagram
    </SocialPill>
  </nav>
</div>
